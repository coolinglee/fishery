<template>
  <view class="login">
    <image class="logo" src="../images/bitmap@2x.png"></image>
    <image class="font" src="../images/logo.png"></image>
    <view class="row">
      <image src="../images/fill_1@2x.png"></image><input type="number" placeholder="请输入手机号" placeholder-style="color:#6F6F6F" bindinput="bindPhoneNumber"/>
    </view>
    <view class="row1 row-flex">
      <image src="../images/suo_3@2x.png"></image><input type="number" placeholder="请输入验证码" placeholder-style="color:#6F6F6F" bindinput="bindVerificationCode"/>
      <view class="getcode1" wx:if="{{waitting}}">{{wait}}s后重试</view>
      <view class="{{phoneNumber!==''?'getcode':'getcode1'}}" @tap="getVerificationCode" wx:else>发送验证码</view>
    </view>
    <button open-type="getUserInfo" class="{{verificationCode!==''&&phoneNumber!==''?'lo-but able':'lo-but disable'}}"
            @tap="confirminfo">注册/登录</button>
    <!--<button class="{{verificationCode!==''&&phoneNumber!==''?'lo-but able':'lo-but disable'}}" @tap="confirminfo">注册/登录</button>-->
  </view>
</template>
<script>
import wepy from 'wepy'

export default class Login extends wepy.page {
  data = {
    phoneNumber: '',
    verificationCode: '',
    wait: 60,
    waitting: false,
    timer: ''
  }
  config = {
    navigationBarTitleText: '登录',
    tabBar: {
    }
  }
  methods = {
    bindPhoneNumber(e) {
      this.phoneNumber = e.detail.value
    },
    bindVerificationCode(e) {
      this.verificationCode = e.detail.value
    },
    getVerificationCode() {
      let re = /^1\d{10}$/
      if (re.test(this.phoneNumber)) {
        wepy.showLoading()
        wepy.request({
          url: this.$parent.globalData.baseUrl + 'api/' + 'webService/verification',
          data: {
            phone: this.phoneNumber
          },
          method: 'GET',
          success: res => {
            console.log(res.data)
            if (res.data.code === 0) {
              this.$parent.globalData.phone = this.phoneNumber
              wepy.showToast({title: '验证码发送成功'})
              this.startCount()
            } else {
              wepy.showToast({title: res.data.error, icon: 'none'})
            }
          },
          complete: () => {
            wepy.hideLoading()
          }
        })
      } else {
        wepy.showToast({
          title: '手机号码错误',
          icon: 'none',
          duration: 2000
        })
        return 0
      }
    },
    confirminfo() {
      if (!this.verificationCode) {
        wepy.showToast({title: '请输入验证码', icon: 'none'})
        return 0
      } else if (!this.phoneNumber) {
        wepy.showToast({title: '请输入手机号码', icon: 'none'})
        return 0
      }
      console.log(this.$parent.globalData)
      wepy.getSetting({
        success(res) {
          if (!res.authSetting['scope.userInfo']) {
            wepy.authorize({
              scope: 'scope.userInfo',
              success() {
                // 用户已经同意
              }
            })
          }
        }
      })
      wepy.getUserInfo({
        success(res) {
          this.globalData.headImg = res.userInfo.avatarUrl
          this.globalData.name = res.userInfo.nickName
          console.log('成功了', res.userInfo)
        },
        fail(error) {
          console.log('失败了', error)
        }
      })
      // return
      console.log('this.$parent.globalData', this.$parent.globalData)
      wepy.request({
        url: this.$parent.globalData.baseUrl + 'api/' + 'webService/verifySmsCode',
        data: {
          openId: this.$parent.globalData.openId,
          headimgurl: this.$parent.globalData.headImg,
          phone: this.phoneNumber,
          wxUserName: this.$parent.globalData.name,
          smscode: this.verificationCode
        },
        method: 'GET',
        success: res => {
          console.log(res)
          if (!res.data.data) {
            wepy.showToast({title: res.data.msg, icon: 'none', duration: 2000})
            return 0
          } else {
            this.$parent.globalData.id = res.data.data.id
            this.$parent.globalData.name = res.data.data.name
            this.$parent.globalData.sex = res.data.data.sex
            this.$parent.globalData.phone = this.phoneNumber
            this.$parent.globalData.life = res.data.data.life
            this.$parent.globalData.headImg = res.data.data.headimgurl
            this.$parent.globalData.relation = res.data.data.relation
            console.log(res.data)
            let userdata = JSON.stringify(res.data)
            console.log(userdata)
            if (res.data.data.name === null) {
              wepy.navigateTo({
                url: `saveuserinfo?data=${userdata}`
              })
            } else {
              wepy.switchTab({
                url: `home`
              })
            }
          }
        }
      })
    }
  }
  startCount() {
    this.waitting = true
    this.timer = setInterval(() => {
      let wait = this.wait
      this.wait = wait - 1
      this.$apply()
      if (this.wait < 1) {
        this.wait = 60
        this.waitting = false
        this.$apply()
        clearInterval(this.timer)
      }
    }, 1000)
  }
  onLoad() {
    wepy.login({
      success: (res) => {
        let code = res.code
        console.log(res)
        wepy.request({
          url: this.$parent.globalData.baseUrl + 'api/' + 'webService/getuserinfo',
          data: {
            code: code
          },
          method: 'GET',
          success: res => {
            console.log('res.data', res.data)
            if (res.data.data.login) {
              this.$parent.globalData.id = res.data.data.id
              this.$parent.globalData.name = res.data.data.name
              this.$parent.globalData.sex = res.data.data.sex
              this.$parent.globalData.phone = this.phoneNumber
              this.$parent.globalData.life = res.data.data.life
              this.$parent.globalData.headImg = res.data.data.headimgurl
              this.$parent.globalData.relation = res.data.data.relation
              wepy.switchTab({
                url: `home`
              })
            } else {
              this.$parent.globalData.openId = res.data.data.openId
            }
          }
        })
      }
    })
  }
}
</script>
